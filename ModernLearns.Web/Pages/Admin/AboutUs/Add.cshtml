@page
@model ModernLearns.Web.Pages.Admin.AboutUs.AddModel
@{
    ViewData["Title"] = "افزودن درباره ما";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن درباره ما</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    درباره ما
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان</label>
                        <textarea class="form-control" asp-for="AboutUs.Text" rows="10"></textarea>
                        <span asp-validation-for="AboutUs.Text"></span>
                    </div>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>

    </form>
</div>

@section Scripts{
    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>

        CKEDITOR.replace('AboutUs_Text', {
            customConfig: '/js/Config.js'
        });

    </script>
}