@model ModernLearns.Core.DTOs.RegisterViewModel
@{
    ViewData["Title"] = "ثبت نام در سایت";
}
@section Topic_Layer{
    <!-- BreadCrumb start -->
    <div class="container breadcrumb">
        <div class="row align-items-center">
            <div class="col-md-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb_iner">
                        <li class="breadcrumb_iner_item"><a href="/Home">خانه</a></li> /
                        <li class="breadcrumb_iner_item"><a href="#">@ViewData["Title"]</a></li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <!-- BreadCrumb End -->
}

<!-- Singup start -->
<section class="signup padding_top">
    <div class="container register">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">ثبت نام</h2>
                <form asp-action="Register" method="POST" class="register-form" id="register-form">
                    <div class="form-group">
                        <label for="name"><i class="ti-user material-icons-name"></i></label>
                        <input asp-for="UserName" type="text" placeholder="نام کاربری">
                    </div>
                    <div class="form-group">
                        <label for="email"><i class="ti-email"></i></label>
                        <input asp-for="Email" type="email" placeholder="ایمیل شما">
                    </div>
                    <div class="form-group">
                        <label for="pass"><i class="ti-lock"></i></label>
                        <input asp-for="Password" type="password" placeholder="رمزعبور">
                    </div>
                    <div class="form-group">
                        <label for="re-pass"><i class="ti-lock"></i></label>
                        <input asp-for="RePassword" type="password" placeholder="تکرار رمز عبور">
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="agree-term" id="agree-term" class="agree-term">
                        <label for="agree-term" class="label-agree-term"><span><span></span></span>من ربات نیستم  <a href="#" class="term-service"></a></label>
                    </div>
                    <div class="form-group form-button">
                        <input type="submit" id="signup" class="form-submit" value="ثبت نام">
                    </div>
                    <div asp-validation-summary="All" class="text-danger rtl-text"></div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="/img/signup-image.jpg" alt="sing up image"></figure>
                <a href="/Login" class="signup-image-link">قبلا ثبت نام کرده ام</a>
            </div>
        </div>
    </div>
</section>
