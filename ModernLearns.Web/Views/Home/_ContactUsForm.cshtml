@model ModernLearns.DataLayer.Entities.ContactUs.ContactUsForm
<div class="form-contact">
    <header>
        <h1>فرم تماس باما</h1>
    </header>
    <form asp-action="ContactUs" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="top">
            <div class="form-group col-md-6">
                <label><i class="zmdi zmdi-account"></i>نام و نام خانوادگی</label>
                <input asp-for="FullName" class="form-control" type="text">
            </div>
            <div class="form-group col-md-6">
                <label><i class="zmdi zmdi-email"></i>ایمیل</label>
                <input asp-for="Email" class="form-control" type="email">
            </div>
        </div>
        <div class="form-group col-md-12">
            <label><i class="zmdi zmdi-assignment"></i>توضیحات</label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        </div>
        <div class="form-group col-md-2">
            <button class="btn_1" type="submit">
                ارسال
            </button>
        </div>
    </form>
</div>