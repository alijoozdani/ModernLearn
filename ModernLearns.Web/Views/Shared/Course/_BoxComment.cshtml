@model ModernLearns.DataLayer.Entities.Course.CourseComment

    <div class="testimonial_slider">
        <div class="row">
            <div class="col-lg-8 col-xl-4 col-sm-8 col-lg-12 align-self-center">
                <div class="testimonial_slider_text">
                    <p>@Model.Comment</p>
                    <h4>@Model.User.UserName</h4>
                    <h5> @Model.Course.CourseTitle</h5>
                </div>
            </div>
            <div class="col-lg-4 col-xl-2 col-sm-4">
                <div class="testimonial_slider_img">
                    <img src="/img/userAvatar/@Model.User.UserAvatar" alt="userAvatar">
                </div>
            </div>
            <div class="col-xl-4 d-none d-xl-block">
                <div class="testimonial_slider_text">
                    <p>@Model.Comment</p>
                    <h4>@Model.User.UserName</h4>
                    <h5>@Model.Course.CourseTitle</h5>
                </div>
            </div>
            <div class="col-xl-2 d-none d-xl-block">
                <div class="testimonial_slider_img">
                    <img src="/img/userAvatar/@Model.User.UserAvatar" alt="userAvatar">
                </div>
            </div>
        </div>
    </div>